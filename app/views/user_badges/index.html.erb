<div class="row justify-content-center">
  <div class="col">
    <h1 align="center"><%= t('user_badges.header') %></h1>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>#</th>
        <th></th>
        <th><%= t('activerecord.attributes.badge.name') %></th>
        <th><%= t('activerecord.attributes.badge.count') %></th>
        <th><%= t('activerecord.attributes.badge.attempts_number') %></th>
        <th><%= t('activerecord.attributes.badge.level') %></th>
        <th><%= t('activerecord.attributes.category.title') %></th>
        <th><%= t('activerecord.attributes.test.title') %></th>
      </tr>
      </thead>
      <tbody>
      <% @user_badges.each.with_index(1) do |ub, index| %>
        <tr>
          <td><%= index %></td>
          <td><%= image_tag ub.badge.image, class: "user-badge-img" %></td>
          <td><%= ub.badge.name %></td>
          <td><%= ub.count %></td>
          <td><%= ub.badge.attempts_number ? ub.badge.attempts_number : ' - ' %></td>
          <td><%= ub.badge.level ? ub.badge.level : ' - ' %></td>
          <td><%= ub.badge.category ? ub.badge.category.title : ' - ' %></td>
          <td><%= ub.badge.test ? ub.badge.test.title : ' - ' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
