<div class="modal" tabindex="-1" role="dialog" aria-hidden="true" id="feedback-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t("feedback.title") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: feedback_path, method: :post do |form| %>
          <div class="form-group">
            <%= form.label :name, t("helpers.label.feedback_modal.name") %><br>
            <%= form.text_field :name, class: "form-control mb-3" %>
            <%= form.label :email, t("helpers.label.feedback_modal.email") %><br>
            <%= form.text_field :email, class: "form-control mb-3" %>
            <%= form.label :body, t("helpers.label.feedback_modal.body") %><br>
            <%= form.text_area :body, class: "form-control mb-3" %>

            <%= form.submit text=t("buttons.submit"), class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>