<h1><%= @test.title %></h1>
<h2>Создать новый вопрос</h2>

<form action="/tests/1/questions" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token" type="hidden">

  <p>
    <label for="question-body">Тело вопроса:</label>
    <input type="text" name="question[body]" id="question_body">
  </p><br>

  <input type="submit" value="Создать">
</form>
