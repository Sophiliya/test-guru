<h1>Тесты</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Уровень</th>
      <th>Категория</th>
      <th>Автор</th>
      <th>Количество вопросов</th>
      <th colspan="3">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.id %></td>
        <td><%= test.title %></td>
        <td align="center"><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= test.author.full_name %></td>
        <td align="center"><%= test.questions.count %></td>
        <td><%= link_to 'Показать', test_path(test) %></td>
        <td><%= link_to 'Редактировать', edit_test_path(test) %></td>
        <td><%= link_to 'Удалить', test_path(test), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
