<h1><%= "Вопросы по #{@test.title}" %></h1>
<%= link_to 'Добавить вопрос', new_test_question_path(@test)%>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Вопрос</th>
      <th colspan="2">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @test.questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.body %></td>
        <td><%= link_to 'Редактировать', edit_question_path(question) %></td>
        <td><%= link_to 'Удалить', question_path(question), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Все тесты', tests_path %></p>
