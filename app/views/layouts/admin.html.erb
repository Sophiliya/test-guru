<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel | TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <% flash.now[:notice] = "#{t('hello')} #{current_user.first_name}!" %>
    <% end %>

    <%= render 'admin/nav' %>
    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render 'shared/footer'%>
  </body>
</html>
