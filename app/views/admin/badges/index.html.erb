<div class="row justify-content-center">
  <div class="col">

    <div class="test-header">
      <h1><%= t('badges.index.header') %></h1>
      <%= link_to t('badges.new.header'), new_admin_badge_path, class: "btn btn-primary m-3" %>
    </div>

    <%= render 'shared/errors', resource: @badge  %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th></th>
        <th><%= t('activerecord.attributes.badge.name') %></th>
        <th><%= t('activerecord.attributes.badge.rule') %></th>
        <th colspan="2"><%= t('actions') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render @badges %>
      </tbody>
    </table>
  </div>
</div>
