<% model = answer.new_record? ? [:admin, question, answer] : [:admin, answer] %>
<%= form_with model: model do |form| %>
  <div class="form-group">
    <%= form.hidden_field :question_id, value: question.id %>
    <%= form.label :body %><br>
    <%= form.text_field :body, class: "form-control mb-3" %>
    <div class="answer-check-box">
      <%= form.check_box :correct, class: "form-check-input mb-3" %>
      <%= form.label :correct, class: "form-check-label mb-3"%>
    </div>
    <%= form.submit text="#{answer.new_record? ? 'Создать' : 'Изменить'}", class: "btn btn-primary"%>
  </div>
<% end %>
<p><%= link_to 'Назад', admin_test_path(question.test), class: "btn btn-primary" %></p>
